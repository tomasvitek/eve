<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="chrome=1">
    <meta name="viewport" content="width=device-width">

    <title>{ifset title}{include title|striptags}{/ifset}{ifset subtitle} | {include subtitle|striptags}{/ifset}</title>

    <link rel="stylesheet" href="{$baseUrl}/css/minimal.css">
    <link rel="stylesheet" href="{$baseUrl}/css/styles.css">
    <link rel="stylesheet" href="{$baseUrl}/css/bootstrap.min.css">
    <link rel="stylesheet" href="{$baseUrl}/css/bootstrap-datetimepicker.min.css">

    <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
    <!--[if lt IE 9]>
    <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>

<body>
  <div class="wrapper">
    {include @header.latte}

    <section>
  		<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>

  		<div class="content">
  			{include content}
  		</div>
    </section>

    <footer>
      <p>
        <small>
          Runs on <a href="https://github.com/tomasvitek/eve">eve</a> &mdash; Theme by <a href="https://github.com/orderedlist/minimal">orderedlist</a>
        </small>
        <small id="logged-in" n:if="$user->loggedIn">
          <br>Signed in as {$user->identity->realname} &mdash;  <a n:href="Sign:out">Sign out</a>
        </small>
        <small id="logged-out" n:if="!$user->loggedIn">
          <br><a n:href="Sign:in">Sign in</a>
        </small>
      </p>
    </footer>
  </div>

  {block scripts}
  	<script src="{$baseUrl}/js/scale.fix.js"></script>
    <script src="{$baseUrl}/js/jquery.custom.js"></script>
    <script type="text/javascript" src="{$baseUrl}/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="{$baseUrl}/js/bootstrap-datetimepicker.min.js"></script>
	  <script src="//nette.github.io/resources/js/netteForms.min.js"></script>
	{/block}
</body>
</html>
